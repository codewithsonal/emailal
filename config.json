{
	"name": "WhatsAppAlerts",

	"namespace": "Stanford\\WhatsAppAlerts",

	"description": "Convert Alerts and Notifications to use What's App",

	"documentation": "README.md",

    "framework-version": 5,

	"authors": [
		{
			"name": "Andrew Martin",
			"email": "andy123@stanford.edu",
			"institution": "Stanford University"
		},
        {
            "name": "Ryan Valentine",
            "email": "rval@stanford.edu",
            "institution": "Stanford University"
        }

    ],

	"permissions": [
		"redcap_email",
        "redcap_module_system_enable",
        "redcap_every_page_top"
	],

	"enable-every-page-hooks-on-system-pages": false,

	"links": {
		"project": [
            {
                "name": "What's App",
                "icon": "fab fa-whatsapp",
                "url": "pages/info.php",
                "show-header-and-footer": true
            },
            {
                "name": "What's App Templates",
                "icon": "fab fa-whatsapp",
                "url": "pages/templates.php",
                "show-header-and-footer": true
            },
            {
                "name": "What's App Messages",
                "icon": "fab fa-whatsapp",
                "url": "pages/messages.php",
                "show-header-and-footer": true
            }



        ],
		"control-center": [

		]
	},

	"no-auth-pages": [
        "pages/statusCallback"
	],

	"project-settings": [
        {
            "key": "sid",
            "name": "<b>Twilio SID</b>",
            "required": true,
            "type": "text"
        },
        {
            "key": "token",
            "name": "<b>Twilio Token</b>",
            "required": true,
            "type": "text"
        },
        {
            "key": "from-number",
            "name": "<b>From Number</b><br>Must be in e164 format (e.g. +16508675309 or +255121234567)",
            "required": true,
            "type": "text"
        },
        {
            "key": "callback-override",
            "name": "<b>Callback Override Url</b><br>For debugging purposes, you can replace your redcap url with a custom url (e.g. ngrok)",
            "required": false,
            "type": "text"
        },
        {
			"key": "enable-project-debug-logging",
			"name": "<b>Enable Debug Logging</b><br><i>(optional)</i> Requires installation and configuration of emLogger",
			"required": false,
			"type": "checkbox"
		}
	],


	"system-settings": [
		{
			"key": "enable-system-debug-logging",
			"name": "<b>Enable Debug Logging (system-wide)</b><i>(optional)</i> Requires installation and configuration of emLogger",
			"required": false,
			"type": "checkbox"
		}
	],

	"compatibility": {
		"php-version-min": "",
		"php-version-max": "",
		"redcap-version-min": "",
		"redcap-version-max": ""
	}
}
